<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/c_accent</item>
        <item name="colorPrimaryDark">@color/c_primary_dark</item>
        <item name="colorPrimary">@color/c_primary</item>
        <!--<item name="colorPrimary">@color/third_slide_background</item>
       <item name="colorPrimaryDark">@color/third_slide_buttons</item>
       <item name="colorAccent">@color/colorAccent</item> -->

    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/c_primary_dark</item>
        <item name="android:textColor">@color/c_primary_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RecyclerTabLayoutTheme">
        <item name="android:textColorSecondary">@color/primary_light_alpha50</item>
    </style>

    <style name="RecyclerTabLayoutTheme.Basic"></style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


</resources>
